<html>
<body>
<head>
<%= stylesheet_link_tag 'timespent', :plugin => 'redmine_monthchart' %>
</head>
<table class="dayschedule">
<thead>
<tr><td width="10%"></td><th>Description</th><th width="20%">Time</th></tr>
</thead>
<tbody>
<% @total.each_with_index do |log,i| %>
  <tr class="hour-entry <%= (i % 2 ==0)? 'hour-odd': 'hour-even' %>">
  <td width="10%"><%=i+1%></td> <td><%=log.comments%></td> <td width="20%"><%=log.hours%></td> 
  </tr>
<%end%>
</tbody>
</table>
</body>
</html>
